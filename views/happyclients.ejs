   margin: 0 15px 100px;
   position: relative;
   margin-top: 168px;
}
.testimonial:before,
.testimonial:after{
   content: "";
   border-top: 40px solid #fff;
   border-right: 125px solid transparent;
   position: absolute;
   bottom: -40px;
   left: 0;
}
.testimonial:after{
   border-right: none;
   border-left: 125px solid transparent;
   left: auto;
   right: 0;
}
.testimonial .icon{
