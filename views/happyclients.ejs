}
.testimonial .testimonial-content{
   width: 100%;
   position: absolute;
   left: 0;
}
.testimonial .pic{
   display: inline-block;
   border: 4px solid white;
   border-radius: 50%;
   box-shadow: 0 0 2px 2px #daad86;
   overflow: hidden;
   z-index: 1;
   position: relative;
}
.testimonial .pic img{
   width: 100%;
   height: auto;
}
.testimonial .title{
